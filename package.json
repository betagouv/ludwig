  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgmap/ludwig"
  },
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "body-parser": "^1.15.1",
    "bootstrap": "^3.3.6",
    "connect-mongo": "^1.1.0",
    "ejs": "^2.4.1",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "lodash": "^4.6.1",
    "moment": "^2.12.0",
    "mongoose": "^4.4.6",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "simple-git": "^1.32.1",
    "superagent": "^1.7.2",
    "xml-to-json-promise": "0.0.3",
    "xml2js": "^0.4.16"
  },
  "devDependencies": {
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-watch": "^2",
    "chai": "^3.0.0",
    "eslint": "^2.2.0",
    "gulp": "^3.9.1",
    "isparta": "^4.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.1.0",
    "mocha-istanbul": "~0.2.0",
    "mocha-lcov-reporter": "^1.0.0",
    "sinon": "^1.12.2",
    "superagent-mock": "^1.10.0",
    "supertest": "~1.1.0",
    "webpack": "^1.12.14"
  },
  "engines": {
    "node": ">=4.2.0"
  },
  "config": {
    "clientID": "client ID you'll need to set via npm (key = ludwig:clientID): https://docs.npmjs.com/cli/config",
    "clientSecret": "client secret you'll need to set via npm (key = ludwig:clientSecret): https://docs.npmjs.com/cli/config",
    "AccessControlAllowOrigin": "url pattern for CORS configuration (key = ludwig:AccessControlAllowOrigin)",
	"port":3000
  },
  "files": [
    "controllers",
    "dist/ludwig.js",
    "helpers",
    "routers",
    "views",
    "server.js",
    "scripts",
    "webpack.config.js"
  ],
  "scripts": {
    "build": "mkdir -p dist && cp -r node_modules/bootstrap/dist ./dist/bootstrap && cp -r ./views/css/ ./dist/ && webpack",
    "prepublish": "npm run build",
    "dev": "babel-watch server.js",
    "start": "babel-node server.js",
    "test": "mocha --compilers js:babel-core/register --recursive ./test/",
    "qualimetry": "istanbul cover _mocha --dir qualimetry/cover -- --compilers js:babel-core/register -R spec test/* test/batch/*",
    "lint": "eslint --ignore-pattern=dist --ignore-pattern=qualimetry .",
    "clean": "rm -rf node_modules && rm -rf dist",
    "insertTestReportData": "babel-node batch/runner.js",
    "setup": "./scripts/setupNPMVariables.sh"
  }
}
